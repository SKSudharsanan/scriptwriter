{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ScriptWriter",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm install --prefix ../frontend && npm run dev --prefix ../frontend -- --host",
    "beforeBuildCommand": "npm install --prefix ../frontend && npm run build --prefix ../frontend"
  },
  "app": {
    "windows": [
      {
        "title": "Script Writer",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "dialog": null
  }
}
